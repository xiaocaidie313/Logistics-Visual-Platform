{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.4.2",
  "workspaces": [
    "apps/*",
    "packages/*",
    "platform/*"
  ],
  "dependencies": {
    "@amap/amap-jsapi-loader": "^1.0.1",
    "ahooks": "^3.9.6",
    "classnames": "^2.5.1",
    "dotenv": "^17.2.3",
    "mongoose": "^9.0.0"
  }
}